<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weatherCard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageviewCard1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rothkogreen"
            />

        <TextView
            android:id="@+id/high_temp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:textColor="#f9f1c8"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/low_temp"
            android:layout_below="@id/high_temp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#f9f1c8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Day"
            android:id="@+id/textViewDay"
            android:layout_alignTop="@+id/high_temp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageViewWeatherIcon"
            android:layout_margin="6dp"
            android:layout_below="@+id/textViewDay"
            android:layout_centerHorizontal="true"
            android:background="#7e1010"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="High"
            android:id="@+id/textViewHigh"
            android:layout_alignBottom="@+id/imageViewWeatherIcon"
            android:layout_toLeftOf="@+id/textViewDay"
            android:layout_toStartOf="@+id/textViewDay"
            android:layout_marginRight="57dp"
            android:layout_marginEnd="57dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Low"
            android:id="@+id/textViewLow"
            android:layout_alignTop="@+id/textViewHigh"
            android:layout_toRightOf="@+id/textViewDay"
            android:layout_toEndOf="@+id/textViewDay"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>