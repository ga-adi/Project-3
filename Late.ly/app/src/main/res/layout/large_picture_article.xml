<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/large_article_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="#aed581" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shocking New Discovery! Android Developers are on the rise!"
            android:id="@+id/large_article_title"
            android:layout_below="@+id/large_article_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="12dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/large_article_icon"
            android:layout_below="@+id/large_article_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:src="#ba68c8" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/large_article_icon"
            android:layout_toRightOf="@+id/large_article_icon"
            android:layout_toEndOf="@+id/large_article_icon"
            android:layout_alignBottom="@+id/large_article_icon"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Expert Analyzers"
                android:id="@+id/large_article_source"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 hours ago"
                android:id="@+id/large_article_time"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="4dp" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>