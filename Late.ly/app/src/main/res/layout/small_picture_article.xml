<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/small_article_cardview"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/small_article_image"
                android:layout_alignParentRight="true"
                android:src="#f06292"
                android:layout_marginRight="24dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title Name of The Article Will be Going Right About Here"
                android:id="@+id/small_article_title"
                android:layout_alignTop="@+id/small_article_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/small_article_image"
                android:textColor="#000000"
                android:paddingRight="24dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/small_article_icon"
                android:layout_alignBottom="@+id/small_article_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="24dp"
                android:src="#f06292"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reddit"
                android:id="@+id/small_article_source"
                android:layout_alignTop="@+id/small_article_icon"
                android:layout_toRightOf="@+id/small_article_icon"
                android:layout_toEndOf="@+id/small_article_icon"
                android:layout_alignBottom="@+id/small_article_image"
                android:gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 hours ago"
                android:id="@+id/small_article_time"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/small_article_image"
                android:layout_toStartOf="@+id/small_article_image"
                android:layout_alignTop="@+id/small_article_source"
                android:layout_alignBottom="@+id/small_article_icon"
                android:layout_marginRight="24dp" />
        </RelativeLayout>


</android.support.v7.widget.CardView>