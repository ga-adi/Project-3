<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="8dp"


    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60"
            android:id="@+id/weathercard_current_temp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="50sp"
            android:layout_marginLeft="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/weathercard_current_temp"
            android:layout_toRightOf="@+id/weathercard_current_temp"
            android:layout_toEndOf="@+id/weathercard_current_temp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="in New York"
            android:id="@+id/weathercard_current_location"
            android:layout_alignBottom="@+id/weathercard_current_temp"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:textSize="30sp"
            android:layout_marginLeft="12dp"
            android:layout_alignTop="@+id/textView2"
            android:gravity="center_vertical" />

        <ImageView
            android:visibility="gone"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/weathercard_current_image"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_marginTop="6dp"
            android:src="#64b5f6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today is March 7, 2016"
            android:id="@+id/weathercard_current_date"
            android:layout_below="@+id/weathercard_current_temp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/imageView3"
            android:layout_below="@+id/weathercard_current_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:src="#58000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MON"
                        android:id="@+id/weathercard_day1_date"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="58"
                        android:id="@+id/weathercard_day1_high"
                        android:layout_below="@+id/weathercard_day1_date"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:textColor="#d84315" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="0dp"
                        android:id="@+id/weathercard_day1_image"
                        android:layout_below="@+id/weathercard_day1_high"
                        android:layout_centerHorizontal="true"
                        android:src="#fff176"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="44"
                        android:id="@+id/weathercard_day1_low"
                        android:layout_below="@+id/weathercard_day1_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:textColor="#1565c0" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2">
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TUE"
                        android:id="@+id/weathercard_day2_date"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="58"
                        android:id="@+id/weathercard_day2_high"
                        android:layout_below="@+id/weathercard_day2_date"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:textColor="#d84315" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="0dp"
                        android:id="@+id/weathercard_day2_image"
                        android:layout_below="@+id/weathercard_day2_high"
                        android:layout_centerHorizontal="true"
                        android:src="#fff176"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="44"
                        android:id="@+id/weathercard_day2_low"
                        android:layout_below="@+id/weathercard_day2_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:textColor="#1565c0" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2">
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WED"
                        android:id="@+id/weathercard_day3_date"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="58"
                        android:id="@+id/weathercard_day3_high"
                        android:layout_below="@+id/weathercard_day3_date"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:textColor="#d84315" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="0dp"
                        android:id="@+id/weathercard_day3_image"
                        android:layout_below="@+id/weathercard_day3_high"
                        android:layout_centerHorizontal="true"
                        android:src="#fff176"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="44"
                        android:id="@+id/weathercard_day3_low"
                        android:layout_below="@+id/weathercard_day3_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:textColor="#1565c0" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2">
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="THU"
                        android:id="@+id/weathercard_day4_date"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="58"
                        android:id="@+id/weathercard_day4_high"
                        android:layout_below="@+id/weathercard_day4_date"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:textColor="#d84315" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="0dp"
                        android:id="@+id/weathercard_day4_image"
                        android:layout_below="@+id/weathercard_day4_high"
                        android:layout_centerHorizontal="true"
                        android:src="#fff176"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="44"
                        android:id="@+id/weathercard_day4_low"
                        android:layout_below="@+id/weathercard_day4_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:textColor="#1565c0" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2">
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FRI"
                        android:id="@+id/weathercard_day5_date"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="58"
                        android:id="@+id/weathercard_day5_high"
                        android:layout_below="@+id/weathercard_day5_date"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:textColor="#d84315" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="0dp"
                        android:id="@+id/weathercard_day5_image"
                        android:layout_below="@+id/weathercard_day5_high"
                        android:layout_centerHorizontal="true"
                        android:src="#fff176"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="44"
                        android:id="@+id/weathercard_day5_low"
                        android:layout_below="@+id/weathercard_day5_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:textColor="#1565c0" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>