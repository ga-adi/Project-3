<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:cardCornerRadius="2dp"
    android:id="@+id/eventcard_cardview"
    app:cardElevation="2dp"
    android:layout_marginTop="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:15"
            android:id="@+id/eventcard_time"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Creatives in NYC"
            android:id="@+id/eventcard_groupname"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/eventcard_time"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="36dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HACK-O-THON!"
            android:layout_toRightOf="@+id/eventcard_time"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="36dp"
            android:layout_below="@id/eventcard_groupname"
            android:textColor="#000000"
            android:textSize="20sp"
            android:id="@+id/eventcard_eventname" />
        <TextView
            android:layout_below="@id/eventcard_eventname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 groovy programmers are attending"
            android:layout_toRightOf="@+id/eventcard_time"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="36dp"
            android:id="@+id/eventcard_attendants" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/eventcard_time"
            android:layout_toEndOf="@+id/eventcard_time"
            android:layout_marginLeft="16dp"
            android:src="#35000000" />
    </RelativeLayout>
</android.support.v7.widget.CardView>