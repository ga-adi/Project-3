<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.adi.ho.jackie.versa_news.Fragments.HomeFragment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/home_topstory_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ee2343"/>

    <LinearLayout
        android:id="@+id/latest_news_1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/latest_news_1_image"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:layout_margin="1dp"
            android:background="#333333"/>
        <android.support.v7.widget.CardView
            android:id="@+id/latest_news_2_image"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:layout_margin="1dp"
            android:background="#333333"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/latest_news_2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/latest_news_3_image"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:background="#333333"
            android:layout_margin="1dp"/>
        <android.support.v7.widget.CardView
            android:id="@+id/latest_news_4_image"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:background="#333333"
            android:layout_margin="1dp"/>
    </LinearLayout>



</LinearLayout>
